<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.kicksort.myfirstapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.kicksort.myfirstapp.MainActivity" />
        </activity>
        <activity
            android:name=".LayoutExampleActivity"
            android:label="Layout Example">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".SharedPreferencesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".listview.ListViewActivity" />
        <activity android:name=".recyclerview.RecyclerViewActivity" />
        <activity android:name=".database.DatbaseActivity" />
        <activity android:name=".threading.AsyncTaskActivity" />
        <activity
            android:name=".DialogActivity"
            android:label="@string/title_activity_dialog"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".threading.MyIntentService"
            android:exported="false" />

        <activity
            android:name=".threading.ServiceActivity"
            android:label="@string/title_activity_service"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".customviews.CustomViewsActivity" />
        <activity android:name=".notifications.NotificaitionActivity" />
        <activity
            android:name=".notifications.ResultActivity"
            android:parentActivityName=".notifications.NotificaitionActivity" />
        <activity android:name=".fragment.FragmentActivity"></activity>
    </application>

</manifest>